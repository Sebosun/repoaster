{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2015",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
